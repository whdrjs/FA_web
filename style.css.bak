*{
	margin:0;
	padding:0;
}
#top
{	
	background-image:linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)),url(background.jpg);
	height:100vh;
	background-size:cover;
	background-position:center;
}

.menu
{
	list-style:none;
	margin-left:100px;
	margin-top:30px;
	position:fixed;
	width:100%;
	height:70px;
}

.menu li 
{
	display:inline-block;
}

.menu a
{
	color:white;
	text-decoration:none;
	font-family:"Roboto",sans-serif;
	font-size:15px;
	padding:5px 20px;
}
.border a
{
	border:1px solid white;
}

ul a:hover
{
	border:1px solid white;
}
.welcome 
{
	padding-top:230px
}
.welcome h1
{
	font-family: "Castellar", Castelar, monospace;
